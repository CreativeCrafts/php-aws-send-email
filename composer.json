{
  "name": "creativecrafts/php-aws-send-email",
  "description": "This is a handy package the can send email via AWS SES",
  "keywords": [
    "CreativeCrafts",
    "php-aws-send-email",
    "aws-ses",
    "email"
  ],
  "homepage": "https://github.com/creativecrafts/php-aws-send-email",
  "license": "MIT",
  "authors": [
    {
      "name": "Godspower",
      "email": "creativecraftssolutions@gmail.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": "^8.2",
    "aws/aws-sdk-php": "^3.329",
    "guzzlehttp/guzzle": "^7.8",
    "ext-redis": "*",
    "ext-fileinfo": "*"
  },
  "require-dev": {
    "laravel/pint": "^1.0",
    "pestphp/pest": "^2.20",
    "phpstan/phpstan": "^1.12",
    "phpstan/phpstan-deprecation-rules": "^1.1",
    "phpstan/phpstan-phpunit": "^1.3",
    "rector/rector": "^1.2",
    "spaze/phpstan-disallowed-calls": "^3.5.1",
    "symplify/easy-coding-standard": "^12.3.5"
  },
  "autoload": {
    "psr-4": {
      "CreativeCrafts\\EmailService\\": "src"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "CreativeCrafts\\EmailService\\Tests\\": "tests"
    }
  },
  "scripts": {
    "test": "vendor/bin/pest",
    "test-coverage": "vendor/bin/pest --coverage",
    "format": "vendor/bin/pint"
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "phpstan/extension-installer": true
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
